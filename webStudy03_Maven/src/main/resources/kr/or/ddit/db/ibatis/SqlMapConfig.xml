<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-config-2.dtd" >
<sqlMapConfig>
	<properties resource="kr/or/ddit/db/dbInfo.properties"/>
	<settings useStatementNamespaces="true"/><!-- namespace주는걸 허용하겠다는 true -->
	<typeAlias alias="memberVO" type="kr.or.ddit.vo.MemberVO"/>
	<typeAlias alias="pagingVO" type="kr.or.ddit.vo.PagingInfoVO"/>
	<typeAlias alias="prodVO" type="kr.or.ddit.vo.ProdVO"/>
	<typeAlias alias="buyerVO" type="kr.or.ddit.vo.BuyerVO"/>
	<transactionManager type="JDBC">
		<dataSource type="DBCP">
			<property name="driverClassName" value="${driverClassName}"/>
			<property name="url" value="${url}"/>
			<property name="username" value="${user}"/>
			<property name="password" value="${password}"/>
			<property name="initialSize" value="${initialSize}"/>
			<property name="maxActive" value="${maxActive}"/>
			<property name="maxWait" value="${maxWait}"/>
		</dataSource>
	</transactionManager>
	
	<sqlMap resource="kr/or/ddit/db/ibatis/mappers/member.xml"/>
	<sqlMap resource="kr/or/ddit/db/ibatis/mappers/prod.xml"/>
	<sqlMap resource="kr/or/ddit/db/ibatis/mappers/other.xml"/>
	<sqlMap resource="kr/or/ddit/db/ibatis/mappers/buyer.xml"/>
</sqlMapConfig>
